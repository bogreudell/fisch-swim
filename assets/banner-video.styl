#fs_video-wrapper
	position relative
	width 100%
	height 100vh
	overflow hidden

	video
		position absolute
		top 50%
		left 50%
		-webkit-transform translate(-50%, -50%)
		-ms-transform translate(-50%, -50%)
		-o-transform translate(-50%, -50%)
		transform translate(-50%, -50%)
		min-width 100%
		min-height 100%
		
	#fs_video-controls
		position absolute
		bottom 15px
		right 25px
		
		button
			width 30px
			background none
			border 0
			font-size 1.25rem
			
			&:focus
				outline none
			
			&#fs_play,
			&#fs_volume-on
				display none

@media all and (max-width: 768px)
	#fs_video-wrapper
		video
			min-width initial !important
			min-height initial !important
			height 100% !important
			width auto !important