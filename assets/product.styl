body
	&.template-product
		font-family $serif
		
		.page-width
			max-width none !important
			padding-left 0 !important
			
		.clear
			clear both
				
		.fs_product-single
			&__images
				float left
				width 60%
				
				&--small,
				&--big
					img
						display block
						width 100%
						height auto
				
				&--small
					float left
					width 20%
					
					img
						margin-bottom 3px
				
				&--big
					float left
					width 80%
					
					img
						padding-left 3px
						margin-bottom 3px
			
			&__meta
				float left
				width 38%
				margin-left 2%
				
				&.fixed
					position fixed !important
					top 55px !important
					right 57px !important
					float none !important
					width 36.258% !important
			
				input
					label()
				
				select
					border 1px solid #000
					border-radius 0
					background url(//cdn.shopify.com/s/files/1/0267/3229/8274/t/3/assets/ico-select.svg?v=1206820173969048361) 95% center no-repeat
					label()
				
				button
					border 1px solid #000
					border-radius 0
					background #000
					label()
					color #fff
				
				/* phase out default theme classes */
				.product-single__description
					font-size 1.75rem
					line-height 2rem

			&__title,
			&__price
				heading()